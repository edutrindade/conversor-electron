{
    "name": "electron-linx-conversor",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "dist": "electron-builder",
        "lint": "eslint .",
        "preview": "vite preview",
        "electron": "electron .",
        "start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\""
    },
    "build": {
        "appId": "com.axxos.conversor",
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js",
            "package.json"
        ],
        "win": {
            "icon": "assets/icon.ico",
            "target": "nsis"
        },
        "mac": {
            "icon": "assets/icon.icns"
        }
    },
    "dependencies": {
        "exceljs": "^4.4.0",
        "node-firebird": "^1.1.9",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.3.3",
        "concurrently": "^9.1.0",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.13.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.11.0",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.11.0",
        "vite": "^5.4.10",
        "wait-on": "^8.0.1"
    }
}
